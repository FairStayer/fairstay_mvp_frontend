<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- 
        AWS API Gateway uses HTTPS by default, so no additional configuration needed.
        All backend API calls will use secure HTTPS connections.
    -->
    
    <!-- Domain-specific configuration for AWS API Gateway -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">execute-api.ap-northeast-2.amazonaws.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
